<%- include layouts/header.ejs %>

<style>
    .container {
        text-align: center;
        padding: 40px;
    }

    h1 {
        font-size: 36px;
        color: #333;
        margin-bottom: 20px;
    }

    p {
        font-size: 18px;
        color: #666;
        margin-bottom: 40px;
        font-weight: bold;
        text-transform: uppercase;
    }

    .carousel-container {
        position: relative;
        height: 300px; /* Ajusta la altura seg√∫n tus necesidades */
        overflow: hidden;
    }

    .carousel {
        position: absolute;
        width: 100%;
        height: 100%;
    }

    .carousel-item {
        width: 100%;
        height: 100%;
        display: none;
    }

    .carousel-item.active {
        display: block;
    }
</style>

